body {
  margin: 0;
  font-family: Arial, sans-serif;
  background-color: #f3f4f6;
}

.container {
  text-align: center;
  padding: 50px;
}

h1 {
  color: #1e3a8a;
}

input {
  padding: 10px;
  margin: 10px;
  border: 1px solid #ccc;
}

button {
  padding: 10px 20px;
  background-color: #2563eb;
  color: white;
  border: none;
  cursor: pointer;
}

button:hover {
  background-color: #1e3a8a;
}
